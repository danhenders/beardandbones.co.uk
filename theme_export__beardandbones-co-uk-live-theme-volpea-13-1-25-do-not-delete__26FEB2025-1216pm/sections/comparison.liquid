<style>
  .comparison-section .comparison-item .inner .heading {
    width: 100%;
    text-align: center;
    font-family: Rubik;
    font-style: normal;
    font-weight: 700;
    font-size: 30px;
    line-height: 100%;
    color: #272f33;
    margin: 0 0 23px;
  }
  .comparison-section .comparison-item .inner {
    width: 100%;
    display: block;
    padding: 65px 20px 30px;
  }
  .comparison-section .comparison-item .inner .image-block {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 400px;
  }
  .comparison-section .comparison-item .inner .image-block img {
    display: block;
    width: 100%;
    height: 400px;
    margin: 0 auto;
    object-fit: contain;
    overflow: hidden;
  }
  .comparison-section .comparison-item:first-child .inner .content-block {
    margin-top: 15px;
  }
  .comparison-section .comparison-item .inner .content-block {
    display: block;
    max-width: 400px;
    width: 100%;
    margin: 0 auto;
  }
  .comparison-section .comparison-wrapper {
    display: grid;
    grid-template-columns: repeat(2,1fr);
    max-height: 840px;
    height: 100%;
  }
  .comparison-section .comparison-item:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }
  .comparison-section .comparison-item li {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      margin-bottom: 10px;
      font-family: Rubik;
      font-style: normal;
      font-weight: 700;
      font-size: 23px;
      line-height: 140%;
      color: #546a79;
  }
  .comparison-section .comparison-item:last-child .inner .content-block {
    margin-top: 30px;
  }
  .tick li:before{
    content: url({{ 'tick.svg' | asset_url }});
    width: 45px;
    height: 45px;
    margin-right: 10px;
  }
  .cross li:before{
    content: url({{ 'cross.svg' | asset_url }});
     width: 22px;
    height: 22px;
    margin-right: 10px;
  }
  .cross li {
    margin-bottom: 20px !important;
  }
  @media only screen and (min-width:750px){
    .comparison-section .comparison-item:first-child {
        background: url({{'Vector_d.webp' | asset_url }}) no-repeat;
        background-size: cover;
        background-position: right;
    }
  }
  @media only screen and (max-width:750px){
    .comparison-section .comparison-wrapper {
        background: url({{'Vector_m.webp' | asset_url }}) no-repeat;
        background-size: 65% 100%;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
        
    }
    .comparison-section .comparison-item .inner {
        padding: 40px 10px 10px;
    }
    .comparison-section .comparison-item .inner .image-block {
        height: 196px;
    }
    .comparison-section .comparison-item .inner .image-block img {
        height: 196px;
    }
     .comparison-section .comparison-item .inner .heading {
        font-size: 16px;
        line-height: 140%;
        margin: 0 0 18px;
    }
    .comparison-section .comparison-item .inner .content-block {
        max-width: 200px;
    }
    .comparison-section .comparison-item li {
        font-size: 11px;
        margin-bottom: 5px;
        display: grid;
        grid-template-columns: 1fr 10fr;
    }
    .tick li:before{
      content: "";
      width: 23px;
      height: 23px;
      margin-right: 10px;
      background-size: 23px 23px;
      background-image: url({{ 'tick.svg' | asset_url }});
      background-repeat: no-repeat;
    }
    .cross li:before{
     content: "";
      width: 10px;
      height: 10px;
      margin-right: 10px;
      background-size: 10px 10px;
      background-image: url({{ 'cross.svg' | asset_url }});
      background-repeat: no-repeat;
    }
    .cross li {
      margin-bottom: 10px !important;
    }    
  }
  .inner-main {
    display: flex;
    align-items: center;
}      
</style>
<div class="page-width">
  <div class="comparison-wrapper">
    {% for block in section.blocks %}
      <div class="comparison-item">
          <div class="inner">
              <div class="heading">{{ block.settings.heading }}</div>
                <div class="inner-main">
                  <div class="image-block">
                      <img src="{{ block.settings.image | img_url:'master' }}" width="" height="" loading="lazy">
                  </div>
                  <div class="content-block {{ block.settings.icon }}">
                      {{ block.settings.text }}
                  </div>
                </div>
          </div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Comparison",
    "class":"comparison-section",
    "blocks": [
      {
      "type": "compare",
      "name": "Compare",
      "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Comparison Points"
          },
          {
            "type": "select",
            "id": "icon",
            "label": "Compare Icon",
            "default": "tick",
            "options": [
              {
                "label": "tick",
                "value": "tick"
              },
              {
                "value": "cross",
                "label": "cross"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Comparison",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}

